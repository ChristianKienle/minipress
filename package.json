{
  "name": "main",
  "version": "0.1.1-alpha.4",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "homepage": "https://christiankienle.github.io/minipress/",
  "workspaces": [
    "_examples/**",
    "_packages/**",
    "_support/*",
    "docs",
    "snappy-apps/**"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap --concurrency 1 --use-workspaces",
    "typecheck": "lerna run typecheck --no-bail",
    "test": "lerna run test --concurrency 1",
    "check-dependencies": "npm outdated && lerna exec --no-bail -- npm outdated",
    "publish": "lerna publish prerelease",
    "gh-pages": "node _support/gh-pages",
    "bs": "lerna bootstrap",
    "clean": "lerna clean -y",
    "docs": "cd docs && yarn dev",
    "docs:debug": "cd docs && yarn dev:debug",
    "docs:deploy": "cd docs && yarn deploy",
    "docs:gen": "cd docs && yarn gen",
    "docs:serve": "cd docs && yarn serve",
    "docs:gen:debug": "cd docs && yarn gen:debug",
    "helloworld": "cd _examples/hello-world && yarn dev",
    "helloworld:serve": "cd _examples/hello-world && yarn serve",
    "helloworld:debug": "cd _examples/hello-world && yarn dev:debug",
    "helloworld:gen": "cd _examples/hello-world && yarn gen",
    "helloworld:gen:debug": "cd _examples/hello-world && yarn gen:debug",
    "blog": "cd _examples/blog && yarn dev",
    "blog:serve": "cd _examples/blog && yarn serve",
    "blog:debug": "cd _examples/blog && yarn dev:debug",
    "blog:gen": "cd _examples/blog && yarn gen",
    "blog:gen:debug": "cd _examples/blog && yarn gen:debug",
    "features": "cd _examples/features && yarn dev",
    "features:debug": "cd _examples/features && yarn dev:debug",
    "features:gen": "cd _examples/features && yarn gen",
    "features:serve": "cd _examples/features && yarn serve",
    "features:gen:debug": "cd _examples/features && yarn gen:debug",
    "perftest": "cd _examples/performance-test && yarn dev",
    "perftest:debug": "cd _examples/performance-test && yarn dev:debug",
    "perftest:gen": "cd _examples/performance-test && yarn gen",
    "perftest:serve": "cd _examples/performance-test && yarn serve",
    "perftest:gen:debug": "cd _examples/performance-test && yarn gen:debug"

  },
  "devDependencies": {
    "eslint": "6.5.1",
    "lerna": "^3.16.4",
    "lerna-update-wizard": "^0.16.0"
  }
}
